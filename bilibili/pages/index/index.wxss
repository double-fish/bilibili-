
page{
  color: #666666;
}
.nav{
 white-space: nowrap; 
  padding: 5rpx 0;
}
.nav_item{
 margin: 20rpx 45rpx; 
 font-size: 30rpx; 
  display: inline-block;
  
}
.nav_item.active{
  border-bottom: 5rpx solid #de688b;
}
/* 轮播图 */
.slides swiper {
 height: 220rpx;
}
swiper-item{
  width: 100%;
}
.slides navigator{
  width: 100%;
  height: 100%;
}
.slides image{
  width: 100%;
  height: 100%;
}
/* 视频列表 */
.video_wrap{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 16rpx;
}
.video_item{
  width: 49%;
  margin-bottom: 20rpx;
}
.video_img{
position: relative;
}

.video_img image{
  width: 100%;
  border-radius: 15rpx;
}
.video_img .video_info{
  position: absolute;
  bottom: 20rpx;
  display: flex;
  color: #ffffff;
  font-size: 24rpx;
  
}
.play_count_row{
margin-right: 10rpx;
}
.video_title{
  font-size: 28rpx;
  display:-webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient:vertical;
}